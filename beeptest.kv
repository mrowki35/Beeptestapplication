#:kivy 2.1.0

WindowManager:
    Main_Screen:


<Main_Screen>:
    Carousel:
        loop: True

        FloatLayout:
            id: middle
            Label:
                id: Timecounter
                pos_hint: {"center_x":0.5,"center_y":0.2}
                size_hint: (0.2,0.3)
                text: "Hello World"
            Label:
                id: Levelcounter
                pos_hint: {"center_x":0.5,"center_y":0.4}
                size_hint: (0.2,0.3)
            
            Button:
                text: "Start"
                size_hint: (0.4,0.2)
                pos_hint: {"center_x":0.5,"center_y":0.7}
                on_press: root.on_press()
        FloatLayout:
            id: right
            Label:
                text: "Your best result"
        FloatLayout:
            id : left
            Label:
                text: "Last results"